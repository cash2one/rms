html
	head
		title
		link(rel='stylesheet', href='/views/css/plugin.thumbnail.css')
	body
- var RA=''
- if(result.length>0){
- RA='Related articles';
- }
		div #{RA}
		div#relatecontent
			each r in result
				div.item
					a(href='#{r.url}' target='_blank')
						img(src='#{r.thumbnail}')
						= r.title
